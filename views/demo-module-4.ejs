                                <div class="col-md-6">
                                    <h5>Code:</h5>
                                    <pre class="bg-light p-3 rounded"><code>// Object with Methods
const student = {
    name: "Alice Johnson",
    grades: [85, 92, 78, 95],
    
    // Method to calculate average
    getAverage: function() {
        const sum = this.grades.reduce((total, grade) => 
            total + grade, 0);
        return sum / this.grades.length;
    },
    
    // Method to get letter grade
    getLetterGrade: function() {
        const avg = this.getAverage();
        if (avg >= 90) return 'A';
        if (avg >= 80) return 'B';
        if (avg >= 70) return 'C';
        return 'F';
    },
    
    // Method to get report
    getReport: function() {
        return `${this.name}: ${this.getLetterGrade()}`;
    }
};</code></pre>
