        <!-- Section 1: Variables -->
        <section id="variables" class="demo-section mb-5">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h3><i class="fas fa-box"></i> Variables</h3>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    <h5>Variable Declaration & Assignment</h5>
                                    <div class="demo-controls mb-3">
                                        <label for="varName" class="form-label">Variable Name:</label>
                                        <input type="text" class="form-control mb-2" id="varName" placeholder="myVariable">
                                        <label for="varValue" class="form-label">Variable Value:</label>
                                        <input type="text" class="form-control mb-2" id="varValue" placeholder="Hello World">
                                        <div class="mb-2">
                                            <label class="form-label">Declaration Type:</label><br>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="varType" id="varLet" value="let" checked>
                                                <label class="form-check-label" for="varLet">let</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="varType" id="varConst" value="const">
                                                <label class="form-check-label" for="varConst">const</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="varType" id="varVar" value="var">
                                                <label class="form-check-label" for="varVar">var</label>
                                            </div>
                                        </div>
                                        <button class="btn btn-primary mt-2" onclick="createVariable()">Create Variable</button>
                                        <button class="btn btn-secondary mt-2" onclick="clearVariables()">Clear All</button>
                                    </div>
                                    <div id="variableResult" class="alert d-none"></div>
                                </div>
                                <div class="col-lg-6">
                                    <h5>Generated Code:</h5>
                                    <pre class="bg-light p-3 rounded"><code id="variableCode">// Your variable declarations will appear here
let myVariable = "Hello World";
console.log(myVariable);</code></pre>
                                    
                                    <h6 class="mt-3">Variable Rules:</h6>
                                    <ul class="small">
                                        <li><strong>let:</strong> Block-scoped, can be reassigned</li>
                                        <li><strong>const:</strong> Block-scoped, cannot be reassigned</li>
                                        <li><strong>var:</strong> Function-scoped, can be reassigned</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Section 2: Data Types -->
        <section id="data-types" class="demo-section mb-5">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h3><i class="fas fa-tags"></i> Data Types</h3>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    <h5>Data Type Checker</h5>
                                    <div class="demo-controls mb-3">
                                        <label for="dataInput" class="form-label">Enter a value:</label>
                                        <input type="text" class="form-control mb-2" id="dataInput" placeholder="42">
                                        <button class="btn btn-success me-2" onclick="checkDataType()">Check Data Type</button>
                                        <button class="btn btn-info" onclick="showExamples()">Show Examples</button>
                                    </div>
                                    <div id="dataTypeResult" class="alert d-none"></div>
                                </div>
                                <div class="col-lg-6">
                                    <h5>JavaScript Data Types:</h5>
                                    <div class="row">
                                        <div class="col-6">
                                            <h6>Primitive Types:</h6>
                                            <ul class="small">
                                                <li><strong>string:</strong> "Hello"</li>
                                                <li><strong>number:</strong> 42, 3.14</li>
                                                <li><strong>boolean:</strong> true, false</li>
                                                <li><strong>undefined:</strong> undefined</li>
                                                <li><strong>null:</strong> null</li>
                                            </ul>
                                        </div>
                                        <div class="col-6">
                                            <h6>Complex Types:</h6>
                                            <ul class="small">
                                                <li><strong>object:</strong> {name: "John"}</li>
                                                <li><strong>array:</strong> [1, 2, 3]</li>
                                                <li><strong>function:</strong> function() {}</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Section 3: Operators -->
        <section id="operators" class="demo-section mb-5">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-warning text-dark">
                            <h3><i class="fas fa-calculator"></i> Operators</h3>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    <h5>Arithmetic Calculator</h5>
                                    <div class="demo-controls mb-3">
                                        <div class="row g-2">
                                            <div class="col-4">
                                                <input type="number" class="form-control" id="operand1" placeholder="5">
                                            </div>
                                            <div class="col-4">
                                                <select class="form-select" id="operator">
                                                    <option value="+">+ Addition</option>
                                                    <option value="-">- Subtraction</option>
                                                    <option value="*">× Multiplication</option>
                                                    <option value="/">÷ Division</option>
                                                    <option value="%">% Modulus</option>
                                                    <option value="**">** Exponentiation</option>
                                                </select>
                                            </div>
                                            <div class="col-4">
                                                <input type="number" class="form-control" id="operand2" placeholder="3">
                                            </div>
                                        </div>
                                        <button class="btn btn-warning mt-2" onclick="performOperation()">Calculate</button>
                                    </div>
                                    <div id="operatorResult" class="alert d-none"></div>

                                    <h5 class="mt-4">Comparison Tester</h5>
                                    <div class="demo-controls mb-3">
                                        <div class="row g-2">
                                            <div class="col-4">
                                                <input type="text" class="form-control" id="compare1" placeholder="10">
                                            </div>
                                            <div class="col-4">
                                                <select class="form-select" id="comparison">
                                                    <option value="==">==(equal)</option>
                                                    <option value="===">=== (strict equal)</option>
                                                    <option value="!=">>!= (not equal)</option>
                                                    <option value="!==">>!== (strict not equal)</option>
                                                    <option value="<">< (less than)</option>
                                                    <option value=">"> > (greater than)</option>
                                                    <option value="<="><= (less or equal)</option>
                                                    <option value=">=">>= (greater or equal)</option>
                                                </select>
                                            </div>
                                            <div class="col-4">
                                                <input type="text" class="form-control" id="compare2" placeholder="10">
                                            </div>
                                        </div>
                                        <button class="btn btn-warning mt-2" onclick="performComparison()">Compare</button>
                                    </div>
                                    <div id="comparisonResult" class="alert d-none"></div>
                                </div>
                                <div class="col-lg-6">
                                    <h5>Operator Types:</h5>
                                    
                                    <h6>Arithmetic Operators:</h6>
                                    <pre class="bg-light p-2 rounded small"><code>+  Addition       5 + 3 = 8
-  Subtraction    5 - 3 = 2
*  Multiplication 5 * 3 = 15
/  Division       6 / 3 = 2
%  Modulus        5 % 3 = 2
** Exponentiation 2 ** 3 = 8</code></pre>

                                    <h6>Comparison Operators:</h6>
                                    <pre class="bg-light p-2 rounded small"><code>==  Equal (loose)     5 == "5" → true
=== Equal (strict)    5 === "5" → false
!=  Not equal (loose) 5 != "5" → false
!== Not equal (strict) 5 !== "5" → true
<   Less than         5 < 10 → true
>   Greater than      5 > 10 → false</code></pre>

                                    <h6>Logical Operators:</h6>
                                    <pre class="bg-light p-2 rounded small"><code>&& AND    true && false → false
|| OR     true || false → true
!  NOT    !true → false</code></pre>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Section 4: Basic Syntax -->
        <section id="syntax" class="demo-section mb-5">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-danger text-white">
                            <h3><i class="fas fa-code"></i> Basic Syntax</h3>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    <h5>Code Playground</h5>
                                    <div class="demo-controls mb-3">
                                        <label for="codeInput" class="form-label">Write JavaScript Code:</label>
                                        <textarea class="form-control mb-2" id="codeInput" rows="6" placeholder="// Try writing some JavaScript code:
let message = 'Hello, World!';
console.log(message);
console.log(typeof message);"></textarea>
                                        <button class="btn btn-danger me-2" onclick="executeCode()">Run Code</button>
                                        <button class="btn btn-secondary me-2" onclick="clearCode()">Clear</button>
                                        <button class="btn btn-info" onclick="loadExample()">Load Example</button>
                                    </div>
                                    <div class="card">
                                        <div class="card-header bg-dark text-white">
                                            <small><i class="fas fa-terminal"></i> Console Output:</small>
                                        </div>
                                        <div class="card-body bg-dark text-light" style="min-height: 150px; font-family: monospace;">
                                            <div id="consoleOutput">Ready to run your code...</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <h5>JavaScript Syntax Rules:</h5>
                                    
                                    <h6>1. Statements end with semicolons:</h6>
                                    <pre class="bg-light p-2 rounded small"><code>let name = "John";
console.log(name);</code></pre>

                                    <h6>2. Case-sensitive:</h6>
                                    <pre class="bg-light p-2 rounded small"><code>let myVariable = "Hello";
let MyVariable = "World"; // Different variable!</code></pre>

                                    <h6>3. Comments:</h6>
                                    <pre class="bg-light p-2 rounded small"><code>// This is a single-line comment

/* This is a 
   multi-line comment */</code></pre>

                                    <h6>4. String literals:</h6>
                                    <pre class="bg-light p-2 rounded small"><code>let single = 'Hello';
let double = "World";
let template = `Hello, ${name}!`;</code></pre>

                                    <h6>5. Code blocks use curly braces:</h6>
                                    <pre class="bg-light p-2 rounded small"><code>if (true) {
    console.log("This is a code block");
}</code></pre>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Practice Exercise -->
        <section class="demo-section mb-5">
            <div class="row">
                <div class="col-12">
                    <div class="card border-primary">
                        <div class="card-header bg-primary text-white">
                            <h3><i class="fas fa-pencil-alt"></i> Practice Exercise: Personal Info</h3>
                        </div>
                        <div class="card-body">
                            <h5>Create variables to store your personal information</h5>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="demo-controls mb-3">
                                        <label for="personName" class="form-label">Your Name:</label>
                                        <input type="text" class="form-control mb-2" id="personName" placeholder="John Doe">
                                        
                                        <label for="personAge" class="form-label">Your Age:</label>
                                        <input type="number" class="form-control mb-2" id="personAge" placeholder="25">
                                        
                                        <label for="personCity" class="form-label">Your City:</label>
                                        <input type="text" class="form-control mb-2" id="personCity" placeholder="New York">
                                        
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" id="personStudent">
                                            <label class="form-check-label" for="personStudent">
                                                I am a student
                                            </label>
                                        </div>
                                        
                                        <button class="btn btn-primary mt-2" onclick="createPersonProfile()">Create Profile</button>
                                    </div>
                                    <div id="profileResult" class="alert d-none"></div>
                                </div>
                                <div class="col-lg-6">
                                    <h5>Generated Code:</h5>
                                    <pre class="bg-light p-3 rounded"><code id="profileCode">// Your personal info variables will be generated here
let name = "John Doe";
let age = 25;
let city = "New York";
let isStudent = true;

console.log(`Hello, I'm ${name}, ${age} years old`);
console.log(`I live in ${city}`);
console.log(`Student: ${isStudent}`);</code></pre>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

