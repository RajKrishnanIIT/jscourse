                                </div>
                                <div class="col-md-6">
                                    <h5>Code:</h5>
                                    <pre><code class="language-javascript">function processNumbers() {
    const input = document.getElementById('numberList').value;
    const numbers = input.split(',').map(n => parseInt(n.trim()));
    
    let sum = 0;
    let evenCount = 0;
    let oddCount = 0;
    
    for (let i = 0; i < numbers.length; i++) {
        sum += numbers[i];
        
        if (numbers[i] % 2 === 0) {
            evenCount++;
        } else {
            oddCount++;
        }
    }
    
    const average = sum / numbers.length;
    const result = `
        Numbers: ${numbers.join(', ')}<br>
        Sum: ${sum}<br>
        Average: ${average.toFixed(2)}<br>
        Even numbers: ${evenCount}<br>
        Odd numbers: ${oddCount}
    `;
    
    document.getElementById('numbersResult').innerHTML = result;
}</code></pre>
