                                </div>
                                <div class="col-md-6">
                                    <h5>Code:</h5>
                                    <pre><code class="language-javascript">let targetNumber = Math.floor(Math.random() * 100) + 1;
let attempts = 0;
let gameWon = false;

function makeGuess() {
    if (gameWon) return;
    
    const guess = parseInt(document.getElementById('guessInput').value);
    attempts++;
    
    let message = '';
    let alertClass = 'alert-info';
    
    if (guess === targetNumber) {
        message = `üéâ Congratulations! You guessed it in ${attempts} attempts!`;
        alertClass = 'alert-success';
        gameWon = true;
    } else if (guess < targetNumber) {
        message = `üìà Too low! Try a higher number. (Attempt ${attempts})`;
        alertClass = 'alert-warning';
    } else {
        message = `üìâ Too high! Try a lower number. (Attempt ${attempts})`;
        alertClass = 'alert-warning';
    }
    
    document.getElementById('guessResult').textContent = message;
    document.getElementById('guessResult').className = `alert ${alertClass}`;
}</code></pre>
