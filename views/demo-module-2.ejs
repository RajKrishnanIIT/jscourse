                                                    <option value="-">- Subtract</option>
                                                    <option value="*">√ó Multiply</option>
                                                    <option value="/">√∑ Divide</option>
                                                </select>
                                            </div>
                                            <div class="col-4">
                                                <input type="number" class="form-control" id="num2" placeholder="Second number">
                                            </div>
                                        </div>
                                        <button class="btn btn-success mt-2" onclick="calculate()">Calculate</button>
