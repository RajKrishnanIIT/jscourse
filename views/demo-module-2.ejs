                                        <input type="number" class="form-control" id="patternSize" placeholder="5" min="1" max="10">
                                        <label for="patternChar" class="form-label">Pattern character:</label>
                                        <input type="text" class="form-control" id="patternChar" placeholder="*" maxlength="1">
                                        <button class="btn btn-warning mt-2" onclick="generatePattern()">Generate Pattern</button>
                                    </div>
                                    <div id="patternResult" class="alert alert-info d-none" style="font-family: monospace;"></div>
                                </div>
                                <div class="col-md-6">
                                    <h5>Code:</h5>
                                    <pre><code class="language-javascript">function generatePattern() {
    const size = parseInt(document.getElementById('patternSize').value);
    const char = document.getElementById('patternChar').value || '*';
    let pattern = '';
    
    for (let i = 1; i <= size; i++) {
        for (let j = 1; j <= i; j++) {
            pattern += char + ' ';
        }
        pattern += '<br>';
    }
    
    document.getElementById('patternResult').innerHTML = pattern;
    document.getElementById('patternResult').className = 'alert alert-success';
}</code></pre>
                                </div>
