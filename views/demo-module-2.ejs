                                <div class="col-md-6">
                                    <h5>Code:</h5>
                                    <pre><code class="language-javascript">function generateTable() {
    const number = parseInt(document.getElementById('tableNumber').value);
    let table = `<strong>Multiplication Table for ${number}:</strong><br><br>`;
    
    for (let i = 1; i <= 10; i++) {
        const result = number * i;
        table += `${number} √ó ${i} = ${result}<br>`;
    }
    
    document.getElementById('tableResult').innerHTML = table;
    document.getElementById('tableResult').className = 'alert alert-success';
