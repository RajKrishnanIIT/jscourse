                                        <button class="btn btn-danger mt-2" onclick="startCountdown()">Start Countdown</button>
                                        <button class="btn btn-secondary mt-2" onclick="stopCountdown()">Stop</button>
                                    </div>
                                    <div id="countdownResult" class="alert alert-info d-none"></div>
                                </div>
                                <div class="col-md-6">
                                    <h5>Code:</h5>
                                    <pre><code class="language-javascript">let countdownInterval;

function startCountdown() {
    let count = parseInt(document.getElementById('countdownStart').value);
    
    // Clear any existing countdown
    if (countdownInterval) {
        clearInterval(countdownInterval);
    }
    
    document.getElementById('countdownResult').className = 'alert alert-warning';
    
    countdownInterval = setInterval(() => {
        if (count > 0) {
            document.getElementById('countdownResult').innerHTML = 
                `<h2>${count}</h2>`;
            count--;
        } else {
            document.getElementById('countdownResult').innerHTML = 
                '<h2>üöÄ Time\'s up!</h2>';
            document.getElementById('countdownResult').className = 'alert alert-success';
            clearInterval(countdownInterval);
        }
    }, 1000);
}</code></pre>
